<Window x:Class="FreeTime.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FreeTime"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Closing="Window_Closing">
    <Grid>
        <Button Name="btn_Start" Visibility="Visible" Content="Start" HorizontalAlignment="Left" Margin="178,112,0,0" VerticalAlignment="Top" Width="75" Click="btn_Start_Click"/>
        <Button x:Name="btn_AddToTree" Content="Add" HorizontalAlignment="Left" Margin="75,227,0,0" VerticalAlignment="Top" Width="75" Click="btn_AddToTree_Click"/>
        <Button x:Name="btn_RemoveFromTree" Content="Remove" HorizontalAlignment="Left" Margin="165,227,0,0" VerticalAlignment="Top" Width="75" Click="btn_RemoveFromTree_Click"/>
        <TextBox x:Name="txtbox_NumberToAdd" HorizontalAlignment="Left" Height="23" Margin="75,199,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <ScrollViewer Visibility="Hidden" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" HorizontalAlignment="Left" Margin="75,32,0,0" VerticalAlignment="Top" Height="162" Width="366">
            <TextBlock x:Name="txtblk_Tree"  TextWrapping="Wrap" Text="" />
        </ScrollViewer>
    </Grid>
</Window>
